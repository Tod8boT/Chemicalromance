    },
    {
      "parameters": {
        "operation": "read",
        "documentId": {
          "__rl": true,
          "value": "YOUR_GOOGLE_SHEET_ID",
          "mode": "list"
        },
        "sheetName": {
          "__rl": true,
          "value": "gid=0",
          "mode": "list",
          "cachedResultName": "Campaign_Briefs"
        },
        "options": {
          "range": "A:Z"
        }
      },
      "id": "read-campaigns",
      "name": "Read Campaign Briefs",
