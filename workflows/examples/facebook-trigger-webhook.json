      "credentials": {
        "facebookGraphApi": {
          "id": "2",
          "name": "Facebook Graph API"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"status\": \"success\", \"message\": \"Webhook processed\", \"timestamp\": new Date().toISOString() } }}"
      },
      "id": "response-1",
      "name": "Send Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [
        850,
        400
      ]
    }
