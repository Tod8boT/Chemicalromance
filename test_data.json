{
  "workflow_info": {
    "name": "text_overlay_processor",
    "version": "2.0",
    "nodes": 3,
    "description": "Simplified version without Google Sheets dependency - uses embedded templates"
  },
  "test_case_1": {
    "name": "Flash Sale - Thai Text",
    "input": {
      "image_url": "https://fal.ai/files/zebra/test-image-123.jpg",
      "text_content": "ลด 70% วันนี้เท่านั้น!",
      "template_id": "flash_sale"
    },
    "expected_output": {
      "success": true,
      "cloudinary_url_contains": [
        "res.cloudinary.com/dz3cmaxnc",
        "w_1080,h_1080,c_fill",
        "l_text:Arial_90_bold_center",
        "co_rgb:FF0000",
        "e_outline:8",
        "e_shadow:70",
        "g_north,y_30"
      ]
    }
  },
  "test_case_2": {
    "name": "Success Story - English Text",
    "input": {
      "image_url": "https://fal.ai/files/test456.jpg",
      "text_content": "Amazing Results!",
      "template_id": "success_story"
    },
    "expected_output": {
      "success": true,
      "template_used": "success_story",
      "config_used": {
        "font": "Arial",
        "size": 80,
        "color": "FFD700",
        "stroke_color": "3B5998"
      }
    }
  },
  "test_case_3": {
    "name": "Community Moments - Thai with Background",
    "input": {
      "image_url": "https://fal.ai/files/test789.jpg",
      "text_content": "เราเป็นครอบครัวเดียวกัน",
      "template_id": "community_moments"
    },
    "expected_output": {
      "success": true,
      "cloudinary_url_contains": [
        "co_rgb:FFFFFF",
        "co_rgb:E74C3C",
        "e_outline:4",
        "e_shadow:40",
        "b_rgb:000000,o_50",
        "g_center"
      ]
    }
  },
  "test_case_4": {
    "name": "Default Template - No template_id specified",
    "input": {
      "image_url": "https://fal.ai/files/test999.jpg",
      "text_content": "Default Style Text"
    },
    "expected_output": {
      "success": true,
      "template_used": "default",
      "config_used": {
        "font": "Arial",
        "size": 80,
        "color": "FFFFFF",
        "stroke_color": "000000"
      }
    }
  },
  "embedded_templates": {
    "description": "Templates are now embedded in the Code node (no Google Sheets needed)",
    "available_templates": [
      "flash_sale",
      "success_story",
      "community_moments",
      "default"
    ],
    "flash_sale": {
      "font": "Arial",
      "size": 90,
      "weight": "bold",
      "color": "FF0000",
      "stroke_enabled": true,
      "stroke_color": "FFD700",
      "stroke_width": 8,
      "shadow_enabled": true,
      "shadow_strength": 70,
      "position": "north",
      "y_offset": 30,
      "max_width": 950
    },
    "success_story": {
      "font": "Arial",
      "size": 80,
      "weight": "bold",
      "color": "FFD700",
      "stroke_enabled": true,
      "stroke_color": "3B5998",
      "stroke_width": 5,
      "shadow_enabled": true,
      "shadow_strength": 50,
      "position": "north",
      "y_offset": 50,
      "max_width": 800
    },
    "community_moments": {
      "font": "Arial",
      "size": 70,
      "weight": "bold",
      "color": "FFFFFF",
      "stroke_enabled": true,
      "stroke_color": "E74C3C",
      "stroke_width": 4,
      "shadow_enabled": true,
      "shadow_strength": 40,
      "position": "center",
      "background_enabled": true,
      "background_color": "000000",
      "background_opacity": 50,
      "max_width": 850
    },
    "default": {
      "font": "Arial",
      "size": 80,
      "weight": "bold",
      "color": "FFFFFF",
      "stroke_enabled": true,
      "stroke_color": "000000",
      "stroke_width": 5,
      "position": "north",
      "y_offset": 30,
      "max_width": 900
    }
  },
  "manual_test_curl_commands": {
    "test_flash_sale": "curl -I 'https://res.cloudinary.com/dz3cmaxnc/image/upload/w_1080,h_1080,c_fill/l_text:Arial_90_bold_center:%E0%B8%A5%E0%B8%94%2070%25,w_950,c_fit,co_rgb:FF0000/co_rgb:FFD700,e_outline:8/e_shadow:70/fl_layer_apply,g_north,y_30/f_auto,q_auto/https%3A%2F%2Ffal.ai%2Ffiles%2Ftest.jpg'",
    "test_success_story": "curl -I 'https://res.cloudinary.com/dz3cmaxnc/image/upload/w_1080,h_1080,c_fill/l_text:Arial_80_bold_center:Amazing%20Results!,w_800,c_fit,co_rgb:FFD700/co_rgb:3B5998,e_outline:5/e_shadow:50/fl_layer_apply,g_north,y_50/f_auto,q_auto/https%3A%2F%2Ffal.ai%2Ffiles%2Ftest.jpg'"
  },
  "usage_in_parent_workflow": {
    "description": "How to call this sub-workflow from create_image_no_templete or create_image_with_templete",
    "execute_workflow_node": {
      "workflowId": {
        "__rl": true,
        "value": "text_overlay_processor",
        "mode": "name"
      },
      "workflowInputs": {
        "mappingMode": "defineBelow",
        "value": {
          "image_url": "={{ $json.images[0].url }}",
          "text_content": "={{ $json.user_text_input }}",
          "template_id": "flash_sale"
        }
      }
    }
  }
}
